<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5pt"
    android:orientation="vertical"
    android:padding="10pt"
    tools:context="aminulaust.com.zoo.MainActivity">

    <EditText
        android:id="@+id/etShowNumber"
        android:layout_width="match_parent"
        android:layout_height="40pt"
        android:layout_marginTop="20pt"
        android:layout_weight="1"
        android:background="@color/gray"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5pt"
        android:layout_weight="1">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">

            <Button
                android:id="@+id/button7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="buClean"
                android:text="AC"
                android:textSize="36sp" />

            <Button
                android:id="@+id/buPlusMins"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="buNumberEvent"
                android:text="+/-"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="buPercent"
                android:text="%"
                android:textSize="36sp" />

            <Button
                android:id="@+id/buDiv"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/boup"
                android:onClick="buOpEevent"
                android:text="/"
                android:textSize="36sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">

            <Button
                android:id="@+id/bu7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="buNumberEvent"
                android:text="7"
                android:textSize="36sp" />

            <Button
                android:id="@+id/bu8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="buNumberEvent"
                android:text="8"
                android:textSize="36sp" />

            <Button
                android:id="@+id/bu9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="buNumberEvent"
                android:text="9"
                android:textSize="36sp" />

            <Button
                android:id="@+id/buMul"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/boup"
                android:onClick="buOpEevent"
                android:text="*"
                android:textSize="36sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">

            <Button
                android:id="@+id/bu4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="buNumberEvent"
                android:text="4"
                android:textSize="36sp" />

            <Button
                android:id="@+id/bu5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="buNumberEvent"
                android:text="5"
                android:textSize="36sp" />

            <Button
                android:id="@+id/bu6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="buNumberEvent"
                android:text="6"
                android:textSize="36sp" />

            <Button
                android:id="@+id/buSum"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/boup"
                android:onClick="buOpEevent"
                android:text="+"
                android:textSize="36sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <Button
                android:id="@+id/bu1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="buNumberEvent"
                android:text="1"
                android:textSize="36sp" />

            <Button
                android:id="@+id/bu2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="buNumberEvent"
                android:text="2"
                android:textSize="36sp" />

            <Button
                android:id="@+id/bu3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="buNumberEvent"
                android:text="3"
                android:textSize="36sp" />

            <Button
                android:id="@+id/buSub"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/boup"
                android:onClick="buOpEevent"
                android:text="-"
                android:textSize="36sp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="2dp">

        <Button
            android:id="@+id/bu0"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/gray"
            android:onClick="buNumberEvent"
            android:text="0"
            android:textSize="36sp" />

        <Button
            android:id="@+id/buDot"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/gray"
            android:onClick="buNumberEvent"
            android:text="."
            android:textSize="36sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/boup"
            android:onClick="buEqualEvent"
            android:text="="
            android:textSize="36sp" />
    </LinearLayout>
</LinearLayout>
